sudo brctl addbr tornet
sudo ip link set dev tornet up
sudo ip addr add 10.100.100.1/24 dev tornet
sudo sysctl -w net.ipv4.conf.all.forwarding=1
sudo iptables -P FORWARD DROP
sudo iptables -A INPUT -m state --state INVALID -j DROP
sudo iptables -A INPUT -m state --state RELATED,ESTABLISHED -j ACCEPT
sudo iptables -A FORWARD -i tornet -o wlo1 -p tcp -j ACCEPT
sudo iptables -A FORWARD -i tornet -o wlo1 -p udp --dport=53 -j ACCEPT
sudo iptables -t nat -A POSTROUTING -s 10.100.100.0/24 -o wlo1 -j MASQUERADE
