# sudo /home/trains77/Scripts/sudo-ok
export VDRIVES=$HOME/.VirtualDrives
echo Please input your Rclone password below.
read -s -t 60 PASSWORD
RCLONE_CONFIG_PASS=$PASSWORD rclone mount gdrive: $VDRIVES/Gdrive 2> /dev/null &
RCLONE_CONFIG_PASS=$PASSWORD rclone mount gdrive2: $VDRIVES/Gdrive2 2> /dev/null &
RCLONE_CONFIG_PASS=$PASSWORD rclone mount mega: $VDRIVES/Mega 2> /dev/null &
RCLONE_CONFIG_PASS=$PASSWORD rclone mount onedrive: $VDRIVES/OneDrive 2> /dev/null &
RCLONE_CONFIG_PASS=$PASSWORD rclone mount VirtualDrives:/home/trains77/.VirtualDrives /media/trains77/VirtualDrives 2> /dev/null &
RCLONE_CONFIG_PASS=$PASSWORD rclone mount Gdrive-Encrypted: $VDRIVES/Gdrive-Encrypted > /dev/null &
RCLONE_CONFIG_PASS=$PASSWORD rclone mount nextcloud: $VDRIVES/Nextcloud --vfs-cache-mode writes --no-check-certificate > /dev/null &
